<% layout("/layouts/boilerplate") %>

<style>
  .scrolling-wrapper {
    overflow-x: auto;
    white-space: nowrap;
  }

  .filter {
    text-align: center;
    margin-right: 2rem;
    opacity: 0.7;
    display: inline-block;
    min-width: 80px;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter.active {
    border-bottom: 2px solid black;
    opacity: 1;
  }

  .filter p {
    font-size: 0.8rem;
  }

  .tax-info {
    display: none;
  }

  .tax-toggle-container {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    flex-shrink: 0;
    width: 20%;
    min-width: 200px;
    padding-left: 1rem;
    display: flex;
    align-items: center;
  }

  @media (max-width: 768px) {
    .tax-toggle-container {
      width: 100%;
      justify-content: center;
      margin-top: 1rem;
    }
  }
</style>

<!-- Filters and tax toggle -->
<div class="d-flex flex-column flex-md-row align-items-start justify-content-between border-bottom py-2 px-3">
  <!-- Filter scroll -->
  <div class="scrolling-wrapper d-flex flex-nowrap overflow-auto">
    <% 
      const activeCategory = typeof selectedCategory !== 'undefined' ? selectedCategory.toLowerCase() : '';
    %>
    <% const filters = [
      { key: 'Trending', icon: 'fa-fire' },
      { key: 'Rooms', icon: 'fa-bed' },
      { key: 'Iconic Cities', icon: 'fa-mountain-city' },
      { key: 'Mountains', icon: 'fa-mountain' },
      { key: 'Castles', icon: 'fa-fort-awesome', brand: true },
      { key: 'Amazing pools', icon: 'fa-person-swimming' },
      { key: 'Camping', icon: 'fa-campground' },
      { key: 'Farms', icon: 'fa-cow' },
      { key: 'Arctic', icon: 'fa-snowflake' },
      { key: 'Domes', icon: 'fa-igloo' },
      { key: 'Boats', icon: 'fa-sailboat' }
    ]; %>

    <% for (let filter of filters) {
         const isActive = activeCategory === filter.key.toLowerCase();
    %>
      <a href="/listings?category=<%= encodeURIComponent(filter.key) %>" class="text-dark text-decoration-none">
        <div class="filter <%= isActive ? 'active' : '' %>">
          <i class="fa-<%= filter.brand ? 'brands' : 'solid' %> <%= filter.icon %>"></i>
          <p><%= filter.key %></p>
        </div>
      </a>
    <% } %>
  </div>

  <!-- Tax toggle -->
  <div class="tax-toggle-container">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" />
      <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
    </div>
  </div>
</div>

<!-- Listings -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4 my-3">
  <% if (allListings.length === 0) { %>
    <div class="text-center mt-5 col-12">
      <div class="p-4 border rounded-4 shadow-sm bg-light" style="max-width: 500px; margin: 0 auto;">
        <i class="fa-solid fa-circle-exclamation fa-2x text-warning mb-3"></i>
        <% if (selectedCategory) { %>
          <h4 class="text-secondary">No listings found for "<span class="text-dark"><%= selectedCategory %></span>"</h4>
          <p class="text-muted">Try exploring other categories or check back later.</p>
        <% } else { %>
          <h4 class="text-secondary">No listings available</h4>
          <p class="text-muted">Please add a new listing or come back later.</p>
        <% } %>
      </div>
    </div>
    
  <% } else { %>
    <% for (let listing of allListings) { %>
      <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none text-dark">
        <div class="card listing-card">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing image" style="height: 20rem;">
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b> <br>
              â‚¹ <%= listing.price.toLocaleString("en-IN") %> / night
              <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
            </p>
          </div>
        </div>
      </a>
    <% } %>
  <% } %>
</div>

<script>
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (let info of taxInfo) {
      info.style.display = info.style.display === "inline" ? "none" : "inline";
    }
  });
</script>
